@model Game
@{
    ViewData["Title"] = Model.Name;
}
<div class="card border-success rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row g-0">
            <div class="col-12 col-md-4">
                <div class="h-100">
                    <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")"
                         alt="@Model.Name"
                         class="img-fluid h-100 w-100 object-fit-cover rounded-start" />
                </div>
            </div>

            <div class="col-12 col-md-8 px-4 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-bg-secondary fw-bolder p-2 rounded">@Model.Name</h1>
                    <span class="badge bg-info fs-5 mb-3">@Model.Category?.Name</span>
                    <p class="fs-5 mt-2">@Model.Description</p>
                </div>
                <div class="mt-3">
                    @foreach (var gameDevice in Model.Devices)
                    {
                        <i class="@gameDevice.Device.Icon me-2 fs-1 text-dark"></i>
                    }
                </div>
            </div>
        </div>
    </div>
</div>